@using System.Web.Optimization
@model ProjectPoker.ViewModels.PlayerViewModel

@{
    ViewBag.Title = "Pokerroom";
}

<div class="container">
    @using (Html.BeginForm())
    {

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-2 col-sm-2"})
                <div class="col-md-10 col-sm-10">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.AmountOfBots, htmlAttributes: new {@class = "control-label col-md-2 col-sm-2"})
                <div class="col-md-10 col-sm-10">
                    @Html.EditorFor(model => model.AmountOfBots, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.AmountOfBots, "", new {@class = "text-danger"})
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start new game" class="btn btn-default"/>
            </div>
        </div>
    }
</div>
@section Scripts 
{
   @Scripts.Render("~/bundles/jqueryval")
}
